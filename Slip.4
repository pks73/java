

import java.util.Scanner;

public class rowcol {

	public static void main(String[] args) {
		
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter the Row and Col size");
		int r=sc.nextInt();
		int c=sc.nextInt();
		int a[][]=new int[r][c];
		
		System.out.println("Enter value : ");
		
		for(int i=0;i<r;i++) {
			for(int j=0;j<c;j++) {
				 a[i][j]=sc.nextInt(); 
			}
		}
		
		System.out.println("You Matrix is :");
		for(int i=0;i<r;i++) {
			for(int j=0;j<c;j++) {
				 System.out.print("\t"+a[i][j]);
			}
			System.out.println();
		}
		
		System.out.println("After Changing Row into Col :");
		for(int i=0;i<r;i++) {
			for(int j=0;j<c;j++) {
				 System.out.print("\t"+a[j][i]);
			}
			System.out.println();
		}
	}

}
