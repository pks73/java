

import java.util.Scanner;

public class addmul {

	public static void main(String[] args) {
		
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter the Row and Col size");
		int r=sc.nextInt();
		int c=sc.nextInt();
		int a[][]=new int[r][c];
		int b[][]=new int[r][c];
		int cc[][]=new int [r][c];
		
		System.out.println("Enter 1st Matrix  : ");
		
		for(int i=0;i<r;i++) {
			for(int j=0;j<c;j++) {
				 a[i][j]=sc.nextInt(); 
			}
		}
		
		System.out.println("You 1st Matrix is :");
		for(int i=0;i<r;i++) {
			for(int j=0;j<c;j++) {
				 System.out.print("\t"+a[i][j]);
			}
			System.out.println();
		}
		
		System.out.println("Enter 2nd  Matrix  : ");
		
		for(int i=0;i<r;i++) {
			for(int j=0;j<c;j++) {
				 b[i][j]=sc.nextInt(); 
			}
		}
		
		System.out.println("You 2nd Matrix is :");
		for(int i=0;i<r;i++) {
			for(int j=0;j<c;j++) {
				 System.out.print("\t"+b[i][j]);
			}
			System.out.println();
		}
		
		
		System.out.println("Addition of matrix is :");
		for(int i=0;i<r;i++) {
			for(int j=0;j<c;j++) {
				cc[i][j]=a[i][j] + b[i][j];
				 System.out.print("\t"+cc[i][j]);
			}
			System.out.println();
		}
	}

}
