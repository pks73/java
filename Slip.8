import java.util.Scanner;

public class sphere {

	public static void main(String[] args) {

		double r,sarea,vol;
		Scanner sc= new Scanner(System.in);
		System.out.println("Enter Radius of the sphere is :");
		
		r=sc.nextDouble();
		
		sarea= 4*3.14*(r*r);
		System.out.println("Surface area is: "+sarea);
	
		vol= (4/3)*3.14*(r*r*r);
		System.out.println("Volume of Sphere is : "+vol);

	}

}
